unit main(output uint8 leds)
{
    uint8 a(0);
    uint8 counter(0);

    always {
        __display("--");
        if (counter > 8) { __finish(); }
        {
            a = counter;
            __display("[0] a = %d",a);
        } -> {
            sameas(a) t <: a;
            __display("[1] t = %d",t);
        } -> {
            __display("[2] a = %d",a);
        }
        counter = counter + 1;
    }
}
